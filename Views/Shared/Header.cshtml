@{
}
<!-- Header Top Bar -->
<div class="header-top bg-light py-2 border-bottom">
    <link rel="stylesheet" href="~/css/header.css" />
    <div class="container">
        <div class="header-top-inner d-flex justify-content-between align-items-center">
            <!-- DONATE Section -->
            <div class="donate-box">
                <a href="#" class="donate-btn">💖 DONATE</a>
                <span class="donate-note">tải tốc độ cao chỉ 1.000 donate/1game</span>
            </div>

            <!-- Account Section -->
            <div class="cnt-account">
                <ul class="list-unstyled d-flex align-items-center mb-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="me-3"><i class="fa fa-user"></i> Xin chào, @User.Identity.Name</li>
                        <li class="me-3">
                            <i class="fa fa-money"></i> Số dư: @User.Claims.FirstOrDefault(c => c.Type == "SoDuTaiKhoan")?.Value
                        </li>
                        <li>
                            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Đăng xuất</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="me-3">
                            <a asp-action="DangNhap" asp-controller="Account" class="btn btn-outline-dark btn-sm">Đăng nhập</a>
                        </li>
                        <li>
                            <a asp-action="DangKy" asp-controller="Account" class="btn btn-dark btn-sm">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
