@model WebBanGame.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<h2>@ViewData["Title"]</h2>

@if (ViewBag.SuccessMessage != null)
{
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
<style>
    .dashboard-container {
        display: flex;
        min-height: 400px;
        gap: 32px;
    }
    .sidebar {
        min-width: 220px;
        background: #f8fbff;
        padding: 30px 15px;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.03);
        font-size: 1.08em;
        font-weight: 500;
        height: fit-content;
    }
    .sidebar .nav-link {
        display: block;
        color: #2c3e50;
        padding: 12px 20px;
        margin-bottom: 8px;
        border-radius: 6px;
        transition: background 0.15s;
        text-decoration: none;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
        background: #007bff;
        color: #fff;
        font-weight: 600;
    }
    .dashboard-content {
        flex: 1;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.04);
        padding: 32px;
        min-width: 0;
    }
    .account-label {
        font-weight: 600;
        color: #2d425a;
    }
    .account-value {
        color: #444;
    }
   
        .sidebar {
            min-width: 0;
        }
    }
</style>
<div class="dashboard-container mt-4 mb-5">
    <nav class="sidebar">
        <a class="nav-link " href="@Url.Action("ThongTinTaiKhoan", "Account")">
            <i class="fa fa-user mr-2"></i> Thông tin tài khoản
        </a>
        <a class="nav-link " href="@Url.Action("LichSuNapTien", "NapTien")">
            <i class="fa fa-credit-card mr-2"></i> Lịch sử nạp tiền
        </a>
        <a class="nav-link" href="@Url.Action("LichSuMuaGame", "Order")">
            <i class="fa fa-shopping-cart mr-2"></i> Lịch sử mua game
        </a>
        <a class="nav-link active" href="@Url.Action("DoiMatKhau", "Account")">
            <i class="fa fa-lock mr-2"></i> Đổi mật khẩu
        </a>
    </nav>
    <div class="dashboard-content">
        <h2 class="mb-4" style="font-weight:700;">Đổi mật khẩu</h2>
<form asp-action="DoiMatKhau" method="post">
    <div class="form-group">
        <label>Mật khẩu hiện tại</label>
        <input asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Mật khẩu mới</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
