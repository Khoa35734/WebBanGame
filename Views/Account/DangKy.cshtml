@model WebBanGame.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
    .register-container {
    width: 400px;
    margin: 50px auto;
    padding: 30px;
    background-color: #f2f2f2;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .register-container h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
    }

    .form-group {
    margin-bottom: 15px;
    }

    .form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
    }

    .form-control {
    width: 100%;
    padding: 10px;
    font-size: 14px;
    border-radius: 5px;
    border: 1px solid #ccc;
    }

    .btn-submit {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    border: none;
    color: white;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    }

    .btn-submit:hover {
    background-color: #0056b3;
    }

    .text-danger {
    color: red;
    font-size: 13px;
    }

    .login-link {
    text-align: center;
    margin-top: 15px;
    }
    </style>
</head>

<div class="register-container">
    <h2>Đăng ký tài khoản</h2>

    @using (Html.BeginForm("DangKy", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.TenTaiKhoan)
            @Html.TextBoxFor(m => m.TenTaiKhoan, new { @class = "form-control", placeholder = "Tên tài khoản" })
            @Html.ValidationMessageFor(m => m.TenTaiKhoan)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MatKhau)
            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(m => m.MatKhau)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TenBan)
            @Html.TextBoxFor(m => m.TenBan, new { @class = "form-control", placeholder = "Họ tên" })
            @Html.ValidationMessageFor(m => m.TenBan)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SoDienThoai)
            @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Số điện thoại" })
            @Html.ValidationMessageFor(m => m.SoDienThoai)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NgaySinh)
            @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.NgaySinh)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DiaChi)
            @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Địa chỉ" })
            @Html.ValidationMessageFor(m => m.DiaChi)
        </div>

        <button type="submit" class="btn-submit">Đăng ký</button>
    }

    <p class="login-link">Đã có tài khoản? <a href="/Account/DangNhap">Đăng nhập</a></p>
</div>
