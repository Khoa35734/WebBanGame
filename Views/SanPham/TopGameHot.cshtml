@{
    ViewData["Title"] = "Top Game Bán Chạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var games = Model as IEnumerable<dynamic>;
}

<style>
    .games-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        justify-content: flex-start;
        margin-top: 30px;
    }
    .game-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        overflow: hidden;
        width: 270px;
        transition: transform 0.15s;
        display: flex;
        flex-direction: column;
    }
    .game-card:hover {
        transform: translateY(-4px) scale(1.016);
        box-shadow: 0 8px 24px rgba(0,0,0,0.14);
    }
    .game-card img {
        width: 100%;
        height: 170px;
        object-fit: cover;
        border-radius: 12px 12px 0 0;
    }
    .game-card-body {
        padding: 16px 18px 12px 18px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .game-title {
        font-size: 1.2em;
        font-weight: bold;
        color: #1a233a;
        margin-bottom: 6px;
    }
    .game-price {
        color: #ff3f40;
        font-weight: bold;
        font-size: 1.1em;
        margin-bottom: 10px;
    }
    .game-orders {
        color: #7c7c7c;
        font-size: 0.98em;
        margin-bottom: 10px;
    }
    .buy-btn {
        padding: 9px 0;
        background: #ff3f40;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-weight: 700;
        width: 100%;
        cursor: pointer;
        transition: background 0.1s;
        text-decoration: none;
        text-align: center;
        margin-top: auto;
    }
    .buy-btn:hover {
        background: #d92d30;
        color: #fff;
        text-decoration: none;
    }
</style>

<div class="container">
    <h1 class="mb-4" style="font-weight:bold;">Top Game Bán Chạy Nhất</h1>
    <div class="games-grid">
        @foreach (var game in games)
        {
            <div class="game-card">
                <a href="@Url.Action("ChiTiet", "SanPham", new { id = game.MaSp })">
                    <img src="@game.AnhSp" alt="@game.TenSp" />
                </a>
                <div class="game-card-body">
                    <div class="game-title">@game.TenSp</div>
                    <div class="game-price">@game.GiaSp.ToString("#,##0") VNĐ</div>
                    <div class="game-orders">Đã bán: <b>@game.SoLuongBan</b> lượt</div>
                    <a class="buy-btn" href="@Url.Action("ChiTiet", "SanPham", new { id = game.MaSp })">Xem chi tiết</a>
                </div>
            </div>
        }
    </div>
</div>